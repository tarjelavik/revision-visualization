{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "semicolon": [true, "always"],
        "no-irregular-whitespace": true,
        "indent": [true, "spaces", 4],
        "import-spacing": true,
        "no-trailing-whitespace": [true, "ignore-comments"],
        "quotemark": [true, "single", "avoid-escape"]
    },
    "rulesDirectory": []
}